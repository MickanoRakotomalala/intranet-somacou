                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-xl-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        @Html.ActionLink("ACCUEIL", "Index", "Home", new { area = "" }, new { @id = "link-home", @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("RH", "Rh", "Home", new { area = "" }, new { @id = "link-rh", @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("DSI", "Dsi", "Home", new { area = "" }, new { @id = "link-dsi", @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("COMMERCIAL", "Commercial", "Home", new { area = "" }, new { @id = "link-commercial", @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("MAGASIN", "Magasin", "Home", new { area = "" }, new { @id = "link-magasin", @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("TEINTURE", "Teinture", "Home", new { area = "" }, new { @id = "link-teinture", @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("FFF", "Fff", "Home", new { area = "" }, new { @id = "link-fff", @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("TISSAGE", "Tissage", "Home", new { area = "" }, new { @id = "link-tissage", @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("MP", "Mp", "Home", new { area = "" }, new { @id = "link-mp", @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("FINITION", "Finition", "Home", new { area = "" }, new { @id = "link-finition", @class = "nav-link" })
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="log">
                        <a class="account-log me-2" href="#">S'inscrire &nbsp;<i class="bi bi-person"></i></a>
                    </li>
                    <li class="log">
                        <a class="account-log me-2" href="#">Se Connecter &nbsp;<i class="bi bi-box-arrow-in-right"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
    </div>
    <footer class="container-fluid fixed">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <div class="row">
                        <div class="col-4">
                            <img src="~/Assets/logo-somacou.png" alt="logo smc" />
                        </div>
                        <div class="col-8">
                                <p><i class="bi bi-house-check me-2"></i><span>Pk 08 Route d’AMBOHIMANGA ILAFY</span></p>
                                <p><i class="bi bi-signpost me-2"></i><span>Antananarivo Madagascar</span></p>     
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <label>RESEAUX SOCIAUX</label>
                    <ul>
                        <li class="me-3"><a href="https://www.facebook.com/somacoucouleurvanill" target="_blank"><i class="bi bi-facebook"></i></a></li>
                        <li class="me-3"><a href="https://www.linkedin.com/in/nantenaina-mickano-rakotomalala-55a3a11ab" target="_blank"><i class="bi bi-linkedin"></i></a></li>
                        <li class="me-3"><a href="https://wa.me/+261341029531" target="_blank"><i class="bi bi-whatsapp"></i></a></li>
                        <li class="me-5"><a href="mailto:rakotomalalamickano@gmail.com" target="_blank"><i class="bi bi-envelope"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <hr />
            <div class="Developer">
                <p>&copy; @DateTime.Now.Year - Developer : Mickano RAKOTOMALALA</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
